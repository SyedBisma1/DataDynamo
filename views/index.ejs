<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DataDynamo</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900 ">
    <div class="forms p-20 text-white"> 
        <form action=" /create" method="post">
            <input class="block  px-5 py-2 bg-zinc-800  w-full rounded-md outliine-none"  type="text" placeholder="tittle goes here.." name="tittle">
            <textarea   class="block  px-5 py-2 mt-4  w-full rounded-md outliine-none resize-none bg-zinc-800"   placeholder="write your data details here ...." name="details"></textarea>
            <input class="mt-4 bg-blue-600 px-5 py-2 rounded-md " type="submit" value="create file">
        </form>
    </div>
    <div class="tasks flex gap-3 flex-wrape p-20 ">
        <% if (files.length >0) { %>

           <% files.forEach (function (val){%>
            <div class="task min-w-72 px-3  py-4   rounded-md bg-zinc-800">
                <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
               <div class="flex w-full justify-between items-centre mt-4">
                <a  class="text-blue-500 inline-block " href="/files/<%= val %>">Read more </a>
                <a   class="text-zinc-500" href="/edit/<%=  val%>">edit fileName</a>
               </div>
            </div>

        <%})%>
      <%  }else {%>
        <h3 class="text-zinc-600">NO tasks yet..</h3>
           
   <% } %>
    </div>
  </div>
    
</body>
</html>